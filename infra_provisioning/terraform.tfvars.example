location           = "francecentral"
resource_group_name = "your-resource-group-name"
name_prefix        = "slurm"
admin_username     = "your-username"
ssh_public_key_path = "~/.ssh/id_rsa.pub"

# VM Sizes
login_vm_size      = "Standard_D4s_v3"     # More cost-effective size for login nodes
controller_vm_size = "Standard_D4s_v3"     # More cost-effective size for controller
compute_vm_size    = "Standard_ND96asr_v4" # A100 GPU VM (8x A100 80GB GPUs)
compute_instance_count   = 2                # Number of compute nodes 